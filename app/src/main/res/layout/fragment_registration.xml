<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_account_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="fragments.RegistrationFragment">

        <EditText
            android:id="@+id/account_registration_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Correo electrónico" />

        <EditText
            android:id="@+id/account_registration_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Contraseña" />

        <EditText
            android:id="@+id/account_registration_password_conf"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Confirmar contraseña" />

        <CheckBox
            android:id="@+id/account_registration_contractor_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soy contratista"/>

        <LinearLayout
            android:id="@+id/account_registration_contractor_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/account_registration_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Primer Nombre" />

            <EditText
                android:id="@+id/account_registration_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Segundo Nombre" />

            <EditText
                android:id="@+id/account_registration_last_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Apellidos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disciplina"/>

            <Spinner
                android:id="@+id/account_registration_category_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <EditText
                android:id="@+id/account_registration_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="phone"
                android:hint="Teléfono" />

            <EditText
                android:id="@+id/account_registration_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Sitio web" />

            <EditText
                android:id="@+id/account_registration_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Dirección" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Registrar"
                android:textColor="#FFF"
                android:id="@+id/account_registration_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_button"
                android:minHeight="40dip"
                android:minWidth="200dip"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
