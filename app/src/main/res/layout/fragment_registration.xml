<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="AccountRegistration">

    <EditText
        android:id="@+id/account_registration_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Correo electrónico" />

    <EditText
        android:id="@+id/account_registration_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_registration_email"
        android:layout_marginTop="15dp"
        android:hint="Contraseña" />

    <EditText
        android:id="@+id/account_registration_password_conf"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_registration_password"
        android:layout_marginTop="15dp"
        android:hint="Confirmar contraseña" />

    <Button
        android:text="Registrar"
        android:textColor="#FFF"
        android:id="@+id/account_registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_registration_password_conf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:minHeight="40dip"
        android:minWidth="200dip"/>

</RelativeLayout>
