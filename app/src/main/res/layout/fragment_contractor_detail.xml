<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_contractor_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="ContractorDetail">

        <ProgressBar
            android:id="@+id/contractor_detail_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/contractor_detail_container">

            <TextView
                android:id="@+id/contractor_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/contractor_detail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- The first rating bar is the overall rating of
            the contractor. The second rating bar is the
            rating that the user has given. -->

            <RatingBar
                android:id="@+id/contractor_detail_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:isIndicator="true"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5" />

            <ImageView
                android:id="@+id/contractor_detail_img"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Califícalo"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/contractor_detail_my_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:max="5"
                android:numStars="5"
                android:rating="0.0"
                android:scaleX=".5"
                android:scaleY=".5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/contractor_detail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="18sp"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/contractor_detail_call_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:background="@drawable/rounded_button"
                android:text="Llamar ahora"/>

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/contractor_detail_add_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:background="@drawable/rounded_button"
                android:text="Añadir a favoritos"
                />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/contractor_detail_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:background="@drawable/rounded_button"
                android:text="Enviar Mensaje"
                android:layout_marginBottom="15dp"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/contractor_detail_map"
                android:layout_width="match_parent"
                android:apiKey="@string/google_maps_key"
                android:layout_height="150dp">
            </com.google.android.gms.maps.MapView>


            <TextView
                android:id="@+id/contractor_detail_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contractor_detail_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/contractor_detail_comment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/contractor_detail_add_comment_btn"
                android:text="Agregar comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:background="@drawable/rounded_button"/>

            <ListView
                android:id="@+id/contractor_detail_lv"
                android:layout_width="match_parent"
                android:layout_height="250dp">
            </ListView>

            <!--        <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enviar mensaje"/>
                        -->
        </LinearLayout>

    </RelativeLayout>
</ScrollView>